<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Name Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGreenhouseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewGreenhouseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/greenhouse_name"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Temperature Sensors Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTemperatureSensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewGreenhouseName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header TextView -->
            <TextView
                android:id="@+id/textViewTemperatureSensorsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="Temperature Sensors"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- ScrollView for Checkboxes -->
            <ScrollView
                android:id="@+id/scrollViewTemperatureSensorsCheckboxes"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/linearLayoutTemperatureSensorsCheckboxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <CheckBox
                        android:id="@+id/checkBoxTemperature1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 1" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 2" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 3" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 4" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 5" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 6" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 7" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 8" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 9" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 10" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 11" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 12" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 13" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 14" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 15" />

                    <CheckBox
                        android:id="@+id/checkBoxTemperature16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Sensor 16" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Thresholds Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewThresholds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewTemperatureSensors">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header TextView -->
            <TextView
                android:id="@+id/textViewThresholdsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="Thresholds"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- LinearLayout for Threshold Inputs -->
            <LinearLayout
                android:id="@+id/linearLayoutThresholdInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Minimum Temperature Threshold"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editTextMinThreshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:text="Maximum Temperature Threshold"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editTextMaxThreshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:padding="8dp" />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Change Buttons -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/dark_green"
        android:text="@string/save"
        app:layout_constraintEnd_toStartOf="@id/buttonCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewThresholds" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/dark_green"
        android:text="@string/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonSave"
        app:layout_constraintTop_toBottomOf="@id/cardViewThresholds" />

</androidx.constraintlayout.widget.ConstraintLayout>
